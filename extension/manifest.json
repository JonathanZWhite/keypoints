{
    "manifest_version": 2,

    "name": "Getting started example",
    "description": "This extension shows a Google Image search result for the current page",
    "version": "1.0",
    "background": {
      "scripts": ["dist/background.bundle.js"]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_title" : "Post to Google Buzz"
    },
    "content_scripts": [{
        "js": ["dist/inject.bundle.js"],
        "matches": ["http://*/*", "https://*/*"],
        "css": ["dist/main.css"]
    }],
    "web_accessible_resources": [
        "script.js",
        "frame.html"
    ],
    "icons": {
      "16": "icon.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://localhost:8000;",
    "permissions": [
        "activeTab",
        "contextMenus",
        "https://localhost:8000/",
        "tabs"
    ]
}
